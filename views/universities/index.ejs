<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>All Universities</h1>
<ul>
    <% for (let uni of universities) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (uni.images.length) { %>
                <img crossorigin="anonymous" src="<%= uni.images[0].url %> " alt="" class="img-fluid">
                <% } else { %>
                <img src="https://res.cloudinary.com/dgeqifdzu/image/upload/v1695015552/RealUniversity/xrrfydqzyfrm6cudsdv3.webp"
                    alt="" class="img-fluid">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= uni.name %></h5>
                    <p class="card-text"><%= uni.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= uni.location %></small>
                    </p>
                    <a href="/universities/<%= uni._id %> " class="btn btn-primary">View <%= uni.name %> </a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</ul>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const universities = { features: <%- JSON.stringify(universities) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>